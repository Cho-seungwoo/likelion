<p id="notice"><%= notice %></p>

<h1>Identities</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @identities.each do |identity| %>
      <tr>
        <td><%= identity.title %></td>
        <td><%= identity.content %></td>
        <td><%= link_to 'Show', identity %></td>
        <td><%= link_to 'Edit', edit_identity_path(identity) %></td>
        <td><%= link_to 'Destroy', identity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<a href="/identities/feedback">나의 목표습관 바로가기</a>
<br>
<a href="/identities/choice">정체성 및 습관 새로 선택하기</a>
<br>
<%= link_to '정체성 새로 만들기', new_identity_path %>
<br>

<% if user_signed_in? %>

<br>
<a href="<%=destroy_user_session_path%>" method="delete">로그아웃</a>
<br>

<%else %>
<a href="<%=user_session_path%>"> 로그인</a>
<a href="<%=new_user_session_path%>"> 회원가입</a>

<% end %>